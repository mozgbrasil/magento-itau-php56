        </events>
    </global>
    <frontend>
        <secure_url>
            <mozg_process>/mozg_itau/process</mozg_process>
        </secure_url>
        <routers>
            <mozg_itau>
                <use>standard</use>
                <args>
                    <module>Mozg_Itau</module>
                    <frontName>mozg_itau</frontName>
                </args>
            </mozg_itau>
        </routers>
        <translate>
            <modules>
                <Mozg_Itau>
                    <files>
                        <default>Mozg_Itau.csv</default>
                    </files>
                </Mozg_Itau>
            </modules>
        </translate>
        <layout>
            <updates>
                <mozg_itau>
                    <file>mozg_itau.xml</file>
                </mozg_itau>
            </updates>
        </layout>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <mozg_itau_checkout_onepage_controller_success_action>
                        <class>mozg_itau/observer</class>
                        <method>checkoutSuccess</method>
                    </mozg_itau_checkout_onepage_controller_success_action>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mozg_Itau before="Mage_Adminhtml">Mozg_Itau_Adminhtml</Mozg_Itau>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <mozg_itau>
                    <file>mozg_itau.xml</file>
                </mozg_itau>
            </updates>
        </layout>
        <translate>
            <modules>
                <Mozg_Itau>
                    <files>
                        <default>Mozg_Itau.csv</default>
                    </files>
                </Mozg_Itau>
            </modules>
        </translate>
        <events>
            <sales_order_payment_cancel>
                <observers>
                    <mozg_itau>
                        <class>mozg_itau/observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </mozg_itau>
                </observers>
            </sales_order_payment_cancel>
            <controller_action_postdispatch_adminhtml_sales_order_create_save>
                <observers>
                    <mozg_itau_controller_action_postdispatch_adminhtml_sales_order_create_save>
                        <class>mozg_itau/observer</class>
                        <method>adminSalesOrderCreateSave</method>
                    </mozg_itau_controller_action_postdispatch_adminhtml_sales_order_create_save>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_create_save>
        </events>
    </adminhtml>
    <default>
        <payment>
            <mozg_itau_abstract>
                <active>0</active>
                <sort_order>3000</sort_order>
                <debug>1</debug>             
                <capture_mode>auto</capture_mode>
                <order_status>pending</order_status>
                <payment_pre_authorized></payment_pre_authorized>
                <payment_authorized>processing</payment_authorized>
                <payment_cancelled>holded</payment_cancelled>
                <payment_authorized_virtual>complete</payment_authorized_virtual>
                <refund_authorized>closed</refund_authorized>
                <refund_partial_authorized>processing</refund_partial_authorized>
                <pending_status>pending_payment</pending_status>
                <create_pending_invoice>0</create_pending_invoice>
                <capture_on_shipment>0</capture_on_shipment>
                <uncancelorder>1</uncancelorder>
                <autorefundoncancel>1</autorefundoncancel>
                <send_invoice_update_mail>1</send_invoice_update_mail>
                <send_update_mail>1</send_update_mail>
                <ignore_refund_notification>0</ignore_refund_notification>
                <!--<recurringtypes>ONECLICK</recurringtypes>-->
                <payment_cancelled_redirect>checkout/cart</payment_cancelled_redirect>
                <title_renderer>title_image</title_renderer>
                <shopperlocale></shopperlocale>
                <countryCode></countryCode>
                <split_payments_refund_strategy>1</split_payments_refund_strategy>
            </mozg_itau_abstract>
            <mozg_itau_shopline_bankline translate="title" module="mozg_itau">
                <active>0</active>
                <sort_order>3010</sort_order>
                <title>Itaú Shopline Bankline (powered by MOZG)</title>
                <model>mozg_itau/method_shopline_bankline</model>
                <group>mozg_payment</group>                
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <vencimento>5</vencimento>
                <obs_ad_1>- Sr. Caixa, cobrar multa de 2% após o vencimento</obs_ad_1>
                <obs_ad_2>- Receber até 10 dias após o vencimento</obs_ad_2>
                <obs_ad_3>- acme@acme.com.br - Tel .: (99) 9999-9999</obs_ad_3>
                <obs>3</obs>                
                <visible_type>both</visible_type>
                <order_underpaid_status></order_underpaid_status>
                <order_overpaid_status></order_overpaid_status>
            </mozg_itau_shopline_bankline>
            <mozg_itau_shopline_boleto translate="title" module="mozg_itau">
                <active>0</active>
                <sort_order>3020</sort_order>
                <title>Itaú Shopline Boleto (powered by MOZG)</title>
                <model>mozg_itau/method_shopline_boleto</model>
                <group>mozg_payment</group>                
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <vencimento>5</vencimento>
                <obs_ad_1>- Sr. Caixa, cobrar multa de 2% após o vencimento</obs_ad_1>
                <obs_ad_2>- Receber até 10 dias após o vencimento</obs_ad_2>
                <obs_ad_3>- acme@acme.com.br - Tel .: (99) 9999-9999</obs_ad_3>
                <obs>3</obs>                
                <visible_type>both</visible_type>
                <order_underpaid_status></order_underpaid_status>
                <order_overpaid_status></order_overpaid_status>
            </mozg_itau_shopline_boleto>
        </payment>
    </default>
    <crontab>
        <jobs>
            <mozg_itau_process_notification_queue>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mozg_itau/cronjob::updateNotificationQueue</model>
                </run>
            </mozg_itau_process_notification_queue>
            <mozg_itau_trigger_notification>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mozg_itau/cronjob::triggerNotification</model>
                </run>
            </mozg_itau_trigger_notification>
        </jobs>
    </crontab>
</config>