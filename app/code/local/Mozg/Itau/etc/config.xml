            <mozg_itau>
                <class>Mozg_Itau_Model</class>
                <resourceModel>mozg_itau_resource</resourceModel>
            </mozg_itau>
            <mozg_itau_resource>
                <class>Mozg_Itau_Model_Resource</class>
                <entities>
                    <api_debug>
                        <table>mozg_api_debug</table>
                    </api_debug>
                    <event>
                        <table>mozg_event_data</table>
                    </event>
                    <event_queue>
                        <table>mozg_event_data_queue</table>
                    </event_queue>
                    <order_payment>
                        <table>mozg_order_payment</table>
                    </order_payment>
                </entities>
            </mozg_itau_resource>
            <!--<sales>
                <rewrite>
                    <billing_agreement>Mozg_Itau_Model_Billing_Agreement</billing_agreement>
                </rewrite>
            </sales>
            <sales_resource>
                <rewrite>
                    <billing_agreement>Mozg_Itau_Model_Resource_Billing_Agreement</billing_agreement>
                    <billing_agreement_collection>Mozg_Itau_Model_Resource_Billing_Agreement_Collection</billing_agreement_collection>
                </rewrite>
            </sales_resource>-->
        </models>
        <helpers>
            <mozg_itau>
                <class>Mozg_Itau_Helper</class>
            </mozg_itau>
            <payment>
                <rewrite>
                    <data>Mozg_Itau_Helper_Payment_Data</data>
                </rewrite>
            </payment>
        </helpers>
        <resources>
            <mozg_itau_setup>
                <setup>
                    <module>Mozg_Itau</module>
                    <class>Mozg_Itau_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mozg_itau_setup>
            <mozg_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mozg_write>
            <mozg_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mozg_read>
        </resources>
        <blocks>
            <mozg_itau>
                <class>Mozg_Itau_Block</class>
            </mozg_itau>
            <sales>
                <rewrite>
                    <adminhtml_billing_agreement_grid>Mozg_Itau_Block_Adminhtml_Sales_Billing_Agreement_Grid</adminhtml_billing_agreement_grid>
                </rewrite>
            </sales>
        </blocks>
